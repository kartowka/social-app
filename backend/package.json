{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend social-app",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/run_server.js",
    "API": "npm run build && node dist/run_API.js",
    "dev": "nodemon src/run_server.ts",
    "build": "(rm -rf dist || npx rimraf dist) && tsc -p .",
    "lint": "eslint --ignore-path .eslintignore . --ext .ts,.js .",
    "test:API": "jest --silent --coverage --detectOpenHandles -- src/tests/API",
    "test:socket": "jest -- src/tests/socket.test.ts --detectOpenHandles",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "build:esm": "(rm -rf $outDir || npx rimraf $outDir) && tsc -m es2022 --outDir ./$outDir && eslint ./$outDir --fix && prettier -w ./$outDir --loglevel silent && node buildtools/fix-imports.js $outDir"
  },
  "author": "Anthony F. && Sharon Y.",
  "license": "MIT",
  "dependencies": {
    "@socket.io/admin-ui": "^0.2.0",
    "@socket.io/redis-adapter": "^7.1.0",
    "@socket.io/redis-emitter": "^4.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.2",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.3",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "pino": "^7.10.0",
    "pino-pretty": "^7.6.1",
    "redis": "^4.0.6",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "ts-node-dev": "^1.1.8",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.23",
    "@types/node-fetch": "^2.6.2",
    "@types/passport": "^1.0.9",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "express-async-errors": "^3.1.1",
    "jest": "^27.5.1",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "swagger-jsdoc": "^6.2.0",
    "swagger-ui-express": "^4.3.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}